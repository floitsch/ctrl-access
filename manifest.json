{
  "manifest_version": 2,
  "name": "ctrl-access",
  "version": "0.5.2",
  "description": "Navigate to links with a trigger key (by default the ctrl-key).",
  "icons": { "48": "icon48.png",
             "128": "icon128.png" },
  "permissions": ["tabs"],
  "background": {
    "scripts": ["bg.js"]
  },
  "content_scripts": [
  {
    "matches": ["*://*/*"],
    "js": ["jquery-1.7.2.min.js", "ctrl-access.js"],
    "css": ["ctrl-access.css"],
    "run_at": "document_end",
    "all_frames": true
  }
  ],
  "options_page": "options.html"
}
